<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="240dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:backgroundTint="#ABC3CF"
    android:elevation="6dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImg"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/travel1"
                android:id="@+id/cardItemImageView"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            tools:text="Trip title here long title here wq e qweqeqw "
            android:textAlignment="center"
            android:textSize="18sp"
            android:maxLines="3"
            android:id="@+id/cardItemTripTitleTxtView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Trip destination here here text long rearea dfds f dsf sd"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:maxLines="2"
            android:id="@+id/cardItemTripDestinationTxtView"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>