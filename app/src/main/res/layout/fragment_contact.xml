<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/contact_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_address"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/_0743177574"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/contact_email"
        app:layout_constraintStart_toStartOf="@id/contact_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/fb"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/fb_contact"
        app:layout_constraintBottom_toTopOf="@id/phone_number"
        app:layout_constraintStart_toStartOf="@id/phone_number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/linkend"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/link_contact"
        app:layout_constraintStart_toStartOf="@id/contact_email"
        app:layout_constraintTop_toBottomOf="@id/contact_email" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/phone_number"
        app:layout_constraintBottom_toBottomOf="@id/phone_number"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/smartphone"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/contact_email"
        app:layout_constraintBottom_toBottomOf="@id/contact_email"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/email"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/fb_contact"
        app:layout_constraintBottom_toBottomOf="@id/fb_contact"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/facebook"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/link_contact"
        app:layout_constraintBottom_toBottomOf="@id/link_contact"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/linkedin"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>